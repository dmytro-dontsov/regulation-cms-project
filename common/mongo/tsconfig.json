{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "lib": ["ES2024"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@commons/failure": ["../failure/index.ts"],
      "@commons/mongo": ["../mongo/index.ts"],
      "@commons/validation": ["../validation/index.ts"]
    },
    "moduleResolution": "node"
  }
}